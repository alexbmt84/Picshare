{{!-- User's images... --}}

<div style="margin-top: 30px">

    <h1 class="text-center text-white" style="margin-top: 200px; padding-left:50px;">Mes images</h1>

    {{#if images.length}}

        <div class="divUpload">

            <a class="btn btn-custom-violet py-2" style="  box-shadow: 0px 0px 30px #d01d9b;" href="/upload">
                <i class='bx bx-image-add'></i>
                Ajouter une image
            </a>

        </div>

        <div class="imageRow">
            
            {{#each images}}

                <div class="image-box" data-image-id="{{id}}" data-category="{{this.categoryId}}">
                
                    <a class="image-card" href="/image/{{id}}">

                        <h3 class="thumbnail-title text-white">{{title}}</h3>

                        <div class="col-4 image-container">

                            <div class="thumbnail-container">

                                <img src="{{path}}" alt="{{title}}" class="thumbnail-image">
                            
                            </div>

                        </div>

                    </a>

                </div>

            {{/each}}

        </div>

    {{else}}

        <div class="divUpload">

            <a class="btn btn-custom-violet py-2" style="  box-shadow: 0px 0px 30px #d01d9b;" href="/upload">
                <i class='bx bx-image-add'></i>
                Ajouter une image
            </a>

        </div>

        </div>

    {{/if}}

</div>